<Window x:Class="_4332Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- Кнопка для импорта данных -->
        <Button Width="200" x:Name="ImportDataButton" Content="Импорт данных" Click="ImportDataButton_Click" Margin="300,25,300,0" Height="20" VerticalAlignment="Top"/>

        <!-- Кнопка для экспорта данных -->
        <Button Width="200" x:Name="ExportDataButton" Content="Экспорт в Excel" Click="ExportDataButton_Click" Margin="300,80,300,-72"/>

        <!-- Кнопка "Мухаметшин" (оставляем как есть) -->
        <Button Width="200" x:Name="MukhametshinButton" Content="Мухаметшин" Click="MukhametshinButton_Click" Margin="300,158,300,-145"/>
    </Grid>
</Window>
